{
  "name": "@cuder/personal-webpage-backend",
  "version": "0.1.0",
  "description": "backend for my personal webpage",
  "author": {
    "name": "Javier Becerra",
    "email": "cuderboto002@gmail.com"
  },
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/cuderbot/personal-webpage-backend"
  },
  "main": "src/index.js",
  "scripts": {
    "start": "node .",
    "dev": "nodemon .",
    "lint": "eslint src/",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"src/**/*.js\"  \"test/**/*.js\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "moduleFileExtensions": ["js"],
    "rootDir": "test/unit",
    "testRegex": ".*\\.(spec|test)\\.js$",
    "collectCoverageFrom": ["**/*.js"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "yarn jest --bail --coverage --findRelatedTests"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "ip": "^1.1.5",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "monk": "^7.3.3",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  }
}
